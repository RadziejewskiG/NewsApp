<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogThemeFadeScale" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:windowEnterAnimation">@anim/fade_in_scale_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/fade_out_0_ms</item>
    </style>

    <style name="SnackbarStyle" parent="Widget.MaterialComponents.Snackbar">
        <!-- Used because of a bug in the Material API -->
        <item name="android:layout_margin">@null</item>

        <item name="android:layout_marginTop">@dimen/dp16</item>
        <item name="android:layout_marginLeft">@dimen/dp16</item>
        <item name="android:layout_marginRight">@dimen/dp16</item>

        <item name="android:layout_marginBottom">@dimen/dp72</item>
    </style>

    <style name="MaterialTextViewStyle" parent="TextStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="MaterialTextViewStyleMedium" parent="TextStyleMedium">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="MaterialTextViewStyleTitle" parent="TextStyleTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="MaterialTextViewStyleMediumTitle" parent="TextStyleMediumTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:selectable">false</item>
        <item name="android:clickable">false</item>
        <item name="android:editable">false</item>
    </style>

    <style name="TextButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="materialThemeOverlay">@style/MaterialOverlayTextButton</item>
        <item name="shapeAppearanceOverlay">@style/ShapeTextButton</item>

        <item name="android:textColor">@color/selector_text_button_text_color</item>
        <item name="rippleColor">?attr/rippleColor</item>

        <item name="android:paddingTop">@dimen/dp12</item>
        <item name="android:paddingBottom">@dimen/dp82</item>
        <item name="android:paddingStart">@dimen/dp16</item>
        <item name="android:paddingEnd">@dimen/dp16</item>

        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetLeft">0dp</item>

        <item name="android:minWidth">0dp</item>
        <item name="minWidth">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="minHeight">0dp</item>

        <item name="android:letterSpacing">0.05</item>
    </style>
    <style name="MaterialOverlayTextButton" parent="TextStyleMedium">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="ShapeTextButton" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp4</item>
    </style>

    <style name="TextButtonStylePrimary" parent="TextButtonStyle">
        <item name="android:textColor">@color/selector_text_button_text_color_primary</item>
    </style>

    <style name="RoundedImageShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp6</item>
    </style>

    <style name="CheckboxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="buttonTint">@color/selector_checkbox_color</item>
        <item name="android:textAppearance">@style/Text15</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:paddingLeft">@dimen/dp4</item>
        <item name="android:background">@null</item>
    </style>

    <style name="TextStyle">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:lineSpacingExtra">@dimen/dp3</item>
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextStyleMedium" parent="TextStyle">
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextStyleTitle">
        <item name="android:lineSpacingMultiplier">1</item>
        <item name="fontFamily">@font/roboto_slab_medium</item>
        <item name="android:lineSpacingExtra">@dimen/dp3</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="TextStyleMediumTitle" parent="TextStyleTitle">
        <item name="fontFamily">@font/roboto_slab_semi_bold</item>
    </style>

    <style name="Text15" parent="TextStyle">
        <item name="android:textSize">@dimen/sp15</item>
    </style>

    <style name="Text12" parent="TextStyle">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="Text12Medium" parent="TextStyleMedium">
        <item name="android:textSize">@dimen/sp12</item>
    </style>

    <style name="Text10" parent="TextStyle">
        <item name="android:textSize">@dimen/sp10</item>
    </style>

</resources>
